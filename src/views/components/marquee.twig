            {{ component.marquee_text }}
        </h6>
    </div>
<style>
.marquee {
            /*box-shadow: 0 1px 3px rgba(0, 0, 0, .1);
             Full width of its parent */
            background-color: {{ component.marquee_bg_color }};
            border: 1px solid rgba(0, 0, 0, .15);
            border-right: none;
            border-left: none;
            overflow: hidden;
            position: relative;
            padding:10px;
            width: 100vw;
        }

        .marquee h6 {
            /* position: absolute;
            line-height: 50px;
            width: fit-content; 
            height: 100%;*/
            margin: 0;
            text-align: center;
            /* Start off the right edge */
            
            /* Animate to the left 
            transform: translateX(100%) ;
            animation: scroll-left  ease infinite;
            
            */
            color:{{ component.marquee_text_color }};
            animation-duration: {{ component.marquee_speed }}s;
            
        }
        .rtl-marquee{
            transform: translateX(100%) ;
            animation: scroll-left  ease infinite;
        }
        .ltr-marquee{
            transform: translateX(-100%) ;
            animation: scroll-right  ease infinite;
        }

        @keyframes scroll-right {
            0% {
                transform:  translateX(100%) ;
            }

            100% {
                transform:  translateX(-100%) ;
            }
        }
        @keyframes scroll-left {
            0% {
                transform:  translateX(100%) ;
            }

            100% {
                transform:  translateX(-100%) ;
            }
        }

</style>